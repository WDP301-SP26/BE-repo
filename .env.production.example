# Database Configuration
POSTGRES_USER=
POSTGRES_PASSWORD=
POSTGRES_DB=
POSTGRES_PORT=5432

# Application Configuration
NODE_ENV=production
PORT=8080
ALLOWED_CORS_ORIGINS=

# DigitalOcean Container Registry
# Format: registry.digitalocean.com/your-registry-name
DO_REGISTRY=

# ===================================
# GitHub Secrets Required for CI/CD
# ===================================
# These are NOT in .env file, but need to be configured in GitHub repository settings:
# 
DO_ACCESS_TOKEN= #- DigitalOcean API token with registry access
DO_REGISTRY_NAME= #- Your container registry name (e.g., "my-registry")
DO_DROPLET_HOST= #- Droplet IP address or hostname
DO_DROPLET_USERNAME= #- SSH username for droplet (usually "root")
DO_SSH_PRIVATE_KEY= #- SSH private key for droplet access
# ===================================

# JWT Configuration
JWT_SECRET=
JWT_EXPIRES_IN=7d

# GitHub OAuth
GH_CLIENT_ID=
GH_CLIENT_SECRET=
GH_CALLBACK_URL=

# Jira OAuth
JIRA_CLIENT_ID=
JIRA_CLIENT_SECRET=
JIRA_CALLBACK_URL=

# Frontend
FRONTEND_URL=
